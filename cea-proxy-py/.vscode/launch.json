{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug AIOHTTP app (app.py)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/cea-proxy-py/src/app.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/cea-proxy-py/src",
      "envFile": "${workspaceFolder}/cea-proxy-py/src/.env",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "justMyCode": true,
      "args": []
    },
    {
      "name": "Debug Agent (agent.py)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/cea-proxy-py/src/agent.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/cea-proxy-py/src",
      "envFile": "${workspaceFolder}/cea-proxy-py/src/.env",
      "justMyCode": true
    },
    {
      "name": "Run module: app",
      "type": "debugpy",
      "request": "launch",
      "module": "app",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/cea-proxy-py/src",
      "envFile": "${workspaceFolder}/cea-proxy-py/src/.env",
      "justMyCode": true
    },
    {
      "name": "Pytest (all tests)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-vv"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/cea-proxy-py",
      "envFile": "${workspaceFolder}/cea-proxy-py/src/.env",
      "justMyCode": true
    }
  ]
}
