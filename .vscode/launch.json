{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug AIOHTTP app (app.py)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/cea-proxy-py/src/app.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/cea-proxy-py/src",
      "envFile": "${workspaceFolder}/cea-proxy-py/src/.env",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "justMyCode": true,
      "args": [],
      "preLaunchTask": "uv sync (allow prerelease)",
      "python": "${workspaceFolder}/cea-proxy-py/.venv/bin/python"
    },
    {
      "name": "Debug Agent (agent.py)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/cea-proxy-py/src/agent.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/cea-proxy-py/src",
      "envFile": "${workspaceFolder}/cea-proxy-py/src/.env",
      "justMyCode": true,
      "python": "${workspaceFolder}/cea-proxy-py/.venv/bin/python"
    },
    {
      "name": "Run module: app",
      "type": "debugpy",
      "request": "launch",
      "module": "app",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/cea-proxy-py/src",
      "envFile": "${workspaceFolder}/cea-proxy-py/src/.env",
      "justMyCode": true,
      "python": "${workspaceFolder}/cea-proxy-py/.venv/bin/python"
    },
    {
      "name": "Pytest (all tests)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-vv"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/cea-proxy-py",
      "envFile": "${workspaceFolder}/cea-proxy-py/src/.env",
      "justMyCode": true,
      "python": "${workspaceFolder}/cea-proxy-py/.venv/bin/python"
    },
    {
      "name": "Run via uv (app.py)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/cea-proxy-py/src/app.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/cea-proxy-py",
      "envFile": "${workspaceFolder}/cea-proxy-py/src/.env",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "justMyCode": true,
      "preLaunchTask": "uv sync (allow prerelease)",
      "python": "${workspaceFolder}/cea-proxy-py/.venv/bin/python"
    },
    {
      "name": "Attach to running app (localhost:5678)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "127.0.0.1",
        "port": 5678
      },
      "justMyCode": true
    },
    {
      "name": "Debug AIOHTTP app (env prepare)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/cea-proxy-py/src/app.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/cea-proxy-py/src",
      "envFile": "${workspaceFolder}/cea-proxy-py/src/.env",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "justMyCode": true,
      "preLaunchTask": "env prepare",
      "python": "${workspaceFolder}/cea-proxy-py/.venv/bin/python"
    }
  ]
}
